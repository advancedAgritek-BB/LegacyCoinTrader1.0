# LegacyCoinTrader environment configuration
# Copy to `.env` and replace placeholder values with your own secrets.

# --- Exchange configuration ---
EXCHANGE=kraken
API_KEY=<your_kraken_api_key>
API_SECRET=<your_kraken_api_secret>
KRAKEN_API_KEY=${API_KEY}
KRAKEN_API_SECRET=${API_SECRET}
KRAKEN_WS_TOKEN=
KRAKEN_API_TOKEN=

# Optional: Coinbase credentials
COINBASE_API_KEY=
COINBASE_API_SECRET=
COINBASE_PASSPHRASE=

# Telegram notifications
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=
TELE_CHAT_ADMINS=

# Solana & Helius integration
HELIUS_KEY=
WALLET_ADDRESS=
SOLANA_PRIVATE_KEY=

# Supabase integration
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Sentiment analysis
LUNARCRUSH_API_KEY=

# Trading mode controls
MODE=cex
EXECUTION_MODE=dry_run

# Pump.fun integration (optional)
PUMPFUN_WALLET=
PUMPFUN_PRIVATE_KEY=

# Security & authentication
SECURITY_JWT_SECRET_KEY=<generate_random_secret>
SESSION_SECRET_KEY=<generate_random_secret>
JWT_SECRET_KEY=<legacy_jwt_secret_if_needed>
GATEWAY_JWT_SECRET=<generate_random_secret>

# Service tokens (override for production deployments)
# GATEWAY_SERVICE_TOKEN_TRADING_ENGINE=
# GATEWAY_SERVICE_TOKEN_PORTFOLIO=
# GATEWAY_SERVICE_TOKEN_MARKET_DATA=
# ...

# Miscellaneous API keys
BITQUERY_KEY=
MORALIS_KEY=
PUMPFUN_API_KEY=
RAYDIUM_API_KEY=

# Telegram toggles for local development
TELEGRAM_ENABLED=false

# Optional testing flags
TESTING_MODE=false
